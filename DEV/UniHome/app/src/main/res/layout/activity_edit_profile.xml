<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".EditProfile">

    <ImageView
        android:id="@+id/edit_profile_exit_arrow_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/exit_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/edit_profile_circleButton"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_background" />

    <ImageView
        android:id="@+id/edit_profile_icon_iv"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/picture_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_profile_circleButton" />

    <LinearLayout
        android:id="@+id/edit_profile_background_shape_tv"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_circleButton" >

        <EditText
            android:id="@+id/edit_profile_first_name_et"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:hint="@string/name"
            android:textColor="@color/lightBrown"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/edit_profile_background_shape_tv"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_circleButton" />

        <EditText
            android:id="@+id/edit_profile_surname_et"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:hint="@string/surname"
            android:textColor="@color/lightBrown"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/edit_profile_background_shape_tv"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_first_name_et" />

        <EditText
            android:id="@+id/profile_phone_et"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:hint="@string/phone_number"
            android:textColor="@color/lightBrown"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_surname_et" />

        <EditText
            android:id="@+id/edit_profile_residence_et"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:hint="@string/residence"
            android:textColor="@color/lightBrown"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/edit_profile_background_shape_tv"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_surname_et" />

        <EditText
            android:id="@+id/edit_profile_gender_et"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:hint="@string/gender"
            android:textColor="@color/lightBrown"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/edit_profile_background_shape_tv"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_residence_et" />

        <EditText
            android:id="@+id/edit_profile_nationality_et"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:hint="@string/nationality"
            android:textColor="@color/lightBrown"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/edit_profile_background_shape_tv"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_gender_et" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>